@tailwind base;
@tailwind components;
@tailwind utilities;

@layer base {
	html {
		font-family: Poppins, system-ui, sans-serif;
	}
}

@layer components {
	.styled-link {
		@apply after:block after:w-0 after:border-solid after:border-primary after:border-b-4 after:transition-all after:duration-300 hover:after:w-full;
	}

	.active-link {
		@apply after:block after:w-full after:border-solid after:border-primary after:border-b-4 after:transition-all after:duration-300 hover:after:w-full;
	}
}
